		"@vercel/remix": "^1.17.0",
		"date-fns": "^2.30.0",
		"date-fns-tz": "^2.0.0",
		"fast-deep-equal": "^3.1.3",
		"lodash": "^4.17.21",
		"nanoid": "3.3.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.16.0",
		"@remix-run/eslint-config": "^1.16.0",
		"@types/lodash": "^4.14.194",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.0.1",
		"eslint": "^8.40.0",
